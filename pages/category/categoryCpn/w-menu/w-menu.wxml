<!--pages/category/categoryCpn/w-menu/w-menu.wxml-->
  <scroll-view scroll-y class="wmenu" >
    <view class="category">
      <block wx:for="{{category}}" wx:key="index">
        <view class="categoryItem {{currentIndex === index ? 'active' : ''}}"
              data-index="{{index}}"
              bindtap="itemClick">
              {{item.title}}
              </view>
      </block>
    </view>
  
  </scroll-view>
