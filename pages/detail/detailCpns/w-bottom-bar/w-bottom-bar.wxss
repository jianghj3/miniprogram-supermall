/* pages/detail/detailCpns/w-bottom-bar/w-bottom-bar.wxss */
.bottomBar {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #555;
  text-align: center;
}
.bottomBar .services {
  display: flex;
  flex: 1;
}
.services .client,
.services .shop,
.services .collect {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.client .image ,
.shop .image,
 .collect .image {
   width: 50rpx;
   height: 50rpx;
   vertical-align: middle;
 }
.bottomBar .purchase {
  display: flex;
  flex: 1;
}
.addCart,
.buy {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.addCart {
  background-color: #ffe817;
}
.buy {
  background-color: #ff5777;
  color: #fff;
}