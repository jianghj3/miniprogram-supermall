/* pages/profile/profileCpn/w-info/w-info.wxss */
.info {
  display: flex;
  font-size: 30rpx;
  color: #555;
  text-align: center;
  align-items: center;
}
.info .infoItem {
  flex: 1;
  padding: 50rpx 0;
}
.info .infoItem:nth-child(2) {
  border-left: 2rpx solid #eee;
  border-right: 2rpx solid #eee;
}
.infoItem .count {
  margin-bottom: 6rpx;
}
.infoItem .count .number {
  margin-right: 2rpx;
  color: #ff5879;
  font-size: 36rpx;
  font-weight: 700;
}