/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  height: 80rpx;
  padding-bottom: 10rpx;
  background-color: #fff;
  line-height: 80rpx; 
  text-align: center;
}
.tab-item {
  flex: 1;
}
.active {
  color: #ff5879;

}
.active .item-text {
  padding: 10rpx 16rpx;
  border-bottom: 6rpx solid #ff5879;
}